2. Rishav Das (github:https://github.com/rdofficial/, email:rdofficial192@gmail.com)
"""

# Using a while true loop in order for infinite execution of the script
while True:
    # Asking the user to choose the operation
    choice = input("""
Select your choice :
1. Addition
2. Subtraction
3. Multiplication
4. Division

Enter your choice : """)

    # Asking the user to enter two numbers
    number1 = int(input('\nEnter the first number : '))
    number2 = int(input('Enter the second number : '))

    # Executing the arithmetic calculation as per user entered choice
    if choice == '1':
        # If the user entered the option for addition, then we continue to add the numbers

        print(f'\n[ The result of the addition is : {number1 + number2} ]')
    elif choice == '2':
        # If the user entered the option for subtraction, then we continue to add the numbers

        print(f'\n[ The result of the subtraction is : {number1 - number2} ]')
    elif choice == '3':
        # If the user entered the option for addition, then we continue to add the numbers

        print(f'\n[ The result of the addition is : {number1 * number2} ]')
    elif choice == '4':
        # If the user entered the option for division, then we continue to add the numbers

        if number2 == 0:
            # If the user entered second number is 0, then we display the error message on the console screen (cannot divide by zero)

            print('\n[ Error : Cannot divide by 0 ]')
        else:
            # If the user entered second number is not 0, then we continue

            print(f'\n[ The result of the division is : {number1 / number2} ]')
    else:
        # If the user entered an unrecognized option, then we display the error on the console screen

        print('\n[ Error : No such options available ]')

    # Asking the user wheter to continue the loop or not
    choice = input('\nDo you want to do it again ? (Y) :')
    if choice.lower() == 'y' or choice.lower() == 'yes':
        # If the user entered the option for continue, then we proceed

        continue
    else:
        # If the user entered any other option other than 'y' or 'yes', then we break the loop to close the program

        break
